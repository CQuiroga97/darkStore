{
    "name": "income-microservice",
    "version": "1.0.0",
    "description": "",
    "main": "app.ts",
    "scripts": {
        "dev": "nodemon --exec ts-node-dev src/app.ts",
        "start": "nodemon --exec ts-node-dev src/app.ts",
        "build": "tsc --build",
        "test": "jest --watchAll --passWithNoTests"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "class-validator": "^0.14.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "morgan": "^1.10.0",
        "pg": "^8.11.5",
        "reflect-metadata": "^0.2.2",
        "typeorm": "^0.3.20"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "testMatch": [
            "**/test/**/*.+(ts|tsx|js|jsx)",
            "**/.*.(test|spec).+(ts|tsx|js|jsx)"
        ],
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        }
    },
    "devDependencies": {
        "nodemon": "^3.1.0",
        "ts-node-dev": "^2.0.0",
        "@types/cors": "^2.8.17",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.12.12"
    }
}
